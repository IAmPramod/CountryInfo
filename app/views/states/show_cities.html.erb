<h1>Listing Cities in <%= @state.name%></h1>
<button type="button" class="btn btn-primary btn-lg" data-toggle="modal" data-target="#myModal">New City</button>

<table id="state_cities_list" cellpadding="0" cellspacing="0" border="0" class="datatable table table-striped table-bordered" data-url="<%= cities_state_path(@state.id)%>">
  <thead>
    <tr>
      <%= @presenter.display_column_headers(@columns_headers) %>
    </tr>
  </thead>
  <tbody>
  </tbody>
</table>

<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title" id="myModalLabel">New City</h4>
      </div>
      <div class="modal-body">
        <%= render partial: "form_city" %>
      </div>
    </div>
  </div>
</div>