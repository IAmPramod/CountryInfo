<h1>Listing States in <%= @country.name%></h1>
<button type="button" class="btn btn-primary btn-lg" data-toggle="modal" data-target="#myModal">New State</button>

<table id="country_states_list" cellpadding="0" cellspacing="0" border="0" class="datatable table table-striped table-bordered" data-url="<%= states_country_path(@country.id)%>">
  <thead>
    <tr>
      <%= @presenter.display_column_headers(@columns_headers) %>
    </tr>
  </thead>
  <tbody>
  </tbody>
</table>

<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title" id="myModalLabel"> New State</h4>
      </div>
      <div class="modal-body">
        <%= render partial: "form_state" %>
      </div>
    </div>
  </div>
</div>